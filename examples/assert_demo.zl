use std.assert

?? Example functions to test
fun add(a: i32, b: i32) >> i32 {
    return a + b;
}

fun multiply(a: i32, b: i32) >> i32 {
    return a * b;
}

fun divide(a: f64, b: f64) >> f64 {
    return a / b;
}

fun isEven(n: i32) >> bool {
    return (n % 2) == 0;
}

fun main() >> i32 {
    @printf("=== Assert Module Demo ===\n\n");
    
    testStart();
    
    @printf("Testing mathematical functions:\n\n");
    
    ?? Test addition function
    i32 sum = add(5, 3);
    assertEqual(sum, 8, "add(5, 3) should equal 8");
    testPass("add function test");
    
    ?? Test multiplication function
    i32 product = multiply(4, 6);
    assertEqual(product, 24, "multiply(4, 6) should equal 24");
    testPass("multiply function test");
    
    ?? Test division function with float precision
    f64 quotient = divide(10.0, 3.0);
    assertEqualFloat(quotient, 3.333333, 0.000001, "divide(10.0, 3.0) should be ~3.333333");
    testPass("divide function test");
    
    ?? Test boolean function
    bool even_result = isEven(4);
    assertTrue(even_result, "isEven(4) should return true");
    testPass("isEven(4) test");
    
    bool odd_result = isEven(7);
    assertFalse(odd_result, "isEven(7) should return false");
    testPass("isEven(7) test");
    
    ?? Test range validation
    i32 score = 85;
    assertInRange(score, 0, 100, "Score should be in valid range [0,100]");
    testPass("score range validation");
    
    ?? Test comparison assertions
    i32 max_val = 100;
    i32 current_val = 75;
    assertLess(current_val, max_val, "Current value should be less than maximum");
    testPass("comparison test");
    
    ?? Test pointer validation
    i32 data = 42;
    ptr<i32> data_ptr = &data;
    assertNotNull(data_ptr as ptr<void>, "Data pointer should not be null");
    testPass("pointer validation");
    
    ?? Test inequality
    i32 val1 = 10;
    i32 val2 = 20;
    assertNotEqual(val1, val2, "Values should be different");
    testPass("inequality test");
    
    @printf("\n");
    i32 test_result = testSummary();
    
    if (test_result == 0) {
        @printf("\nüéâ Demo completed successfully - all assertions passed!\n");
        @printf("The assert module is working correctly and ready for use in your tests.\n");
    } else {
        @printf("\n‚ùå Demo failed - some assertions did not pass!\n");
    }
    
    return test_result;
}
